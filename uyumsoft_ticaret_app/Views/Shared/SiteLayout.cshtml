                Hoşgeldiniz @HttpContext.Current.User.Identity.Name
            </div>
            <div class="header-middle-info">
                <div class="col-md-4">
                    <div class="logo">
                        <a href="/Home/Index">
                            <img src="/Content/ecommerce/images/elements/logo.png" alt="site logo" />
                        </a>
                    </div>
                </div>
                <div class="col-md-8">
                    <ul class="header-middle-account">
                        <li><a href="/User/Account"><i class="icon-330" title="My account"></i> Hesap</a></li>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <li><a href="/Security/Logout"><i class="icon-351" title="Logout"></i> Çıkış Yap</a></li>
                        }
                        else
                        {
                            <li><a href="/Security/Login"><i class="icon-351" title="Login"></i> Giriş</a></li>

                        }



                    </ul>
                </div>
                <div class="clear"></div>
            </div>
            <div class="menu">
                <div class="search-cart">
                    <form class="search">
                        <input type="text" class="search-line" placeholder="Ara" name="search" />
                        <input type="submit" value="" class="search-button" />
                    </form>
                    @{
                        Html.RenderAction("MiniCartWidget", "Home");
                    }

                    

                    <div class="clear"></div>
                </div>
                

                <div class="repsonsive-menu"><i class="icon-406" title="406"></i> Menu</div>
                <ul>
                    <li class="menu-item-has-children active">
                        <a href="/Home/Index">Anasayfa</a>

                    </li>
                    <li><a href="/Home/Category">Kategoriler</a></li>


                    <li class="menu-item-has-children">
                        <a href="#">Pages</a>
                        <ul>

                            <li><a href="#">Hakkımızda</a></li>

                            <li><a href="/User/Register">Kayıt Ol</a></li>

                        </ul>
                    </li>
                    <li><a href="#">İletişim</a></li>
                </ul>
                <div class="clear"></div>
            </div>
        </div>
    </div>
    <!-- ======================================================================
                                    END HEADER
    ======================================================================= -->
    <!-- ======================================================================
                                    START CONTENT
    ======================================================================= -->
    <div class="content">
        <!-- =====================================================================
             START THE SLIDER -->
        @{ 
            Html.RenderAction("Slider", "Home");
        }
        
        <!-- END THE SLIDER
        ====================================================================== -->
       
        
        @RenderBody()
        <!-- =====================================================================
                                     START SERVICES
        ====================================================================== -->
     
        
        <!-- =====================================================================
