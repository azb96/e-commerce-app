<body class="home-blog-show">
    <!-- ======================================================================
                                    START SCRIPTS
    ======================================================================= -->
    <div class="header">
        <div class="container">
            <div class="header-top-info">
                <ul class="header-top-socials">
                    <li><a href="#"><i class="icon-160" title="161"></i></a></li>
