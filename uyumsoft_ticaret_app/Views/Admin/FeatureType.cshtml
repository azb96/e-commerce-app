
@{
    ViewBag.Title = "FeatureType";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}


@using uyumsoft_ticaret_app.Models;
@model List<uyumsoft_ticaret_app.Models.FeatureType>

<br />
<br />
<br />
<section class="panel">
    <header class="panel-heading">
        Nitelik Tipleri
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/AddFeatureType" class="btn btn-success">
                        Yeni Nitelik Tipi <i class="icon-plus"></i>
                    </a>
                </div>

                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Tools <i class="icon-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="#">Print</a></li>
                        <li><a href="#">Save as PDF</a></li>
                        <li><a href="#">Export to Excel</a></li>
                    </ul>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover" id="editable-sample">
                <thead>
                    <tr>
                        <th>Nitelik Adı</th>
                        <th>Nitelik Açıklaması</th>
                        <th>Kategori</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (FeatureType type in Model)
                    {
                        <tr class="">
                            <td>@type.FeatureTypeName</td>
                            <td>@type.Detail</td>

                            @if (type.Category != null)
                            {
                                <td>@type.Category.CategoryName</td>
                            }

                            <td>
                                <a class="edit" href="/Admin/EditFeature/@type.id">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>

                            <td>
                                <a class="delete" href="/Admin/DeleteFeature/@type.id">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>
                            <td>
                                <a class="edit" href="#">
                                    <i class="icon-add"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>



