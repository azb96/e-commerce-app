
@{
    ViewBag.Title = "Nitelik Detay";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using uyumsoft_ticaret_app.Models
@model List<FeatureType>

<br />
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Nitelik Detay Ekle
            </header>
            <div class="panel-body">
                <form action="/Admin/AddFeatureDetail" class="form-horizontal tasi-form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Nitelik Detay Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="FeatureDetailName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Nitelik Açıklaması</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Detail">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Nitelik Tipi Seçiniz :</label>
                        <div class="col-lg-10">
                            <select class="form-control m-bot15" name="FeatureTypeID">
                                @foreach (FeatureType featureType in Model)
                                {
                                    <option value="@featureType.id">@featureType.FeatureTypeName</option>
                                }

                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>


                </form>
            </div>


        </section>
    </div>
</div>

