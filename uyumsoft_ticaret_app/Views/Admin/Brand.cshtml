
@{
    ViewBag.Title = "Marka";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@section head{

    <link href="/Content/admin/assets/fancybox/source/jquery.fancybox.css" rel="stylesheet" />

}
@using uyumsoft_ticaret_app.Models
@model IEnumerable<uyumsoft_ticaret_app.Models.Brand>

<br />
<br />
<br />
<section class="panel">
    <header class="panel-heading">
        Markalar
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/AddBrand" class="btn btn-success">
                        Yeni Marka <i class="icon-plus"></i>
                    </a>
                </div>

                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Tools <i class="icon-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="#">Print</a></li>
                        <li><a href="#">Save as PDF</a></li>
                        <li><a href="#">Export to Excel</a></li>
                    </ul>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Marka Adı</th>
                        <th>Marka Açıklaması</th>
                        <th>Resim</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var brand in Model)
                    {
                        <tr class="">
                            <td>@brand.BrandName</td>
                            <td>@brand.Detail</td>
                            <td>
                                <a class="fancybox" href="@brand.Picture.MiddleImg">
                                    <i class="icon-eye-open"></i>
                                </a>
                            </td>
                            <td>
                                <a class="edit" href="/Admin/EditBrand/@brand.id">
                                    <i class="icon-pencil"></i>
                                </a>
                            </td>

                            <td>
                                <a class="delete" href="/Admin/DeleteBrand/@brand.id">
                                    <i class="icon-trash"></i>
                                </a>
                            </td>
                            <td>
                                <a class="edit" href="#">
                                    <i class="icon-add"></i>
                                </a>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

<script src="/Content/admin/assets/fancybox/source/jquery.fancybox.js"></script>
<script type="text/javascript">
    $(function () {
        //    fancybox
        jQuery(".fancybox").fancybox();
    });

</script>




