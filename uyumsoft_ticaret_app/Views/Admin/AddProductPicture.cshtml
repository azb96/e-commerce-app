
@{
    ViewBag.Title = "Resim Ekle";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form action="/Admin/AddProductPicture" method="post" enctype="multipart/form-data">
    <input type="hidden" name="productID" value="@Model" />
        <br /><br /><br /><br />
        <div class="form-group">
            <label class="control-label col-md-3">Ürün Resmi</label>
            <div class="controls col-md-9">
                <div class="fileupload fileupload-new" data-provides="fileupload">
                    <span class="btn btn-white btn-file">
                        <span class="fileupload-new"><i class="icon-paper-clip"></i> Dosya Seç</span>
                        <input type="file" name="fileUpload" class="default" />
                    </span>
                    <span class="fileupload-preview" style="margin-left:5px;"></span>
                    <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none; margin-left:5px;"></a>
                </div>
            </div>
        </div>
        <br /><br /><br /><br />
        <input type="submit" style="margin-left:400px;" name="name" value="Kaydet" class="btn btn-success" />
        <br /><br /><br /><br />
</form>

