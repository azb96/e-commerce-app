
@{
    ViewBag.Title = "AddCategory";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<br />
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kategori Ekle
            </header>
            <div class="panel-body">
                <form action="/Admin/AddCategory" class="form-horizontal tasi-form" enctype="multipart/form-data" method="post">
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori Adı</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="CategoryName">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="col-sm-2 col-sm-2 control-label">Kategori Açıklaması</label>
                        <div class="col-sm-10">
                            <input type="text" class="form-control" name="Detail">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="control-label col-md-3">Kategori Resmi</label>
                        <div class="controls col-md-9">
                            <div class="fileupload fileupload-new" data-provides="fileupload">
                                <span class="btn btn-white btn-file">
                                    <span class="fileupload-new"><i class="icon-paper-clip"></i> Dosya</span>
                                    <span class="fileupload-exists"><i class="icon-undo"></i> Değiştir</span>
                                    <input type="file" class="default" name="fileUpload" />
                                </span>
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>


                </form>
            </div>


        </section>
    </div>
</div>



