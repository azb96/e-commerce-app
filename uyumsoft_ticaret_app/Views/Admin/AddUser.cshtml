
@{
    ViewBag.Title = "Kullanıcı";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

@using uyumsoft_ticaret_app.Models
@model List<RoleRecord>

<br />
<br />
<br />
<div class="row">
    <div class="col-lg-12">
        <section class="panel">
            <header class="panel-heading">
                Kullanıcı Ekle
            </header>
            <div class="panel-body">
                <form role="form" action="/Admin/AddUser" method="post" class="form-horizontal tasi-form">

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Adı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="f-name" class="form-control" name="Firstname">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Soyadı</label>
                        <div class="col-lg-10">
                            <input type="text" placeholder="" id="l-name" class="form-control" name="Lastname">
                        </div>
                    </div>


                    <div class="form-group">
                        <label class="col-lg-2 control-label">Kullanıcı Adı</label>
                        <div class="col-lg-10">
                            <input type="text" class="spinner-input form-control" name="Username">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Şifresi</label>
                        <div class="col-lg-10">
                            <input type="password" class="spinner-input form-control" name="Password">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Email</label>
                        <div class="col-lg-10">
                            <input type="email" class="spinner-input form-control" name="Email">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Telefon No</label>
                        <div class="col-lg-10">
                            <input type="text" class="spinner-input form-control" name="Telephone">
                        </div>
                    </div>

                    <div class="form-group">
                        <label class="col-lg-2 control-label">Rol Seçiniz :</label>
                        <div class="col-lg-10">
                            <select class="form-control m-bot15" name="RoleID">
                                @foreach (RoleRecord role in Model)
                                {
                                    <option value="@role.id">@role.RoleName</option>
                                }
                            </select>
                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-lg-offset-2 col-lg-10">
                            <button class="btn btn-danger" type="submit">Kaydet</button>
                        </div>
                    </div>
                </form>
            </div>
        </section>

        <script type="text/javascript" src="/Content/admin/assets/bootstrap-datepicker/js/bootstrap-datepicker.js"></script>
        <script type="text/javascript" src="/Content/admin/assets/bootstrap-datetimepicker/js/bootstrap-datetimepicker.js"></script>
        <script type="text/javascript" src="/Content/admin/assets/bootstrap-daterangepicker/moment.min.js"></script>
        <script type="text/javascript" src="/Content/admin/assets/bootstrap-daterangepicker/daterangepicker.js"></script>
        <script type="text/javascript" src="/Content/admin/assets/bootstrap-timepicker/js/bootstrap-timepicker.js"></script>

    </div>
</div>


