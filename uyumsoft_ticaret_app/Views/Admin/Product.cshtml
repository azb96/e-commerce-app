@{
    ViewBag.Title = "Ürün";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
@using uyumsoft_ticaret_app.Models

<br />
<br />
<br />
<section class="panel">
    <header class="panel-heading">
        Ürünler
    </header>
    <div class="panel-body">
        <div class="adv-table editable-table ">
            <br />
            <div class="clearfix">
                <div class="btn-group">
                    <a href="/Admin/AddProduct" class="btn btn-success">
                        Yeni Ürün <i class="icon-plus"></i>
                    </a>
                </div>

                <div class="btn-group pull-right">
                    <button class="btn dropdown-toggle" data-toggle="dropdown">
                        Tools <i class="icon-angle-down"></i>
                    </button>
                    <ul class="dropdown-menu pull-right">
                        <li><a href="#">Print</a></li>
                        <li><a href="#">Save as PDF</a></li>
                        <li><a href="#">Export to Excel</a></li>
                    </ul>
                </div>
            </div>
            <br />
            <div class="space15"></div>
            <table class="table table-striped table-hover table-bordered" id="editable-sample">
                <thead>
                    <tr>
                        <th>Ürün Adı</th>
                        <th>Ürün Açıklaması</th>
                        <th>Kategori</th>
                        <th>Marka</th>
                        <th>Fiyat</th>
                        <th>Stok</th>
                        <th>Satıcı İsmi</th>
                        <th>Resim Ekle</th>
                        <th>Güncelle</th>
                        <th>Sil</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Product product in Model.ProductList)
                    {
                    <tr class="">
                        <td>@product.ProductName</td>
                        <td>@product.Detail</td>
                        <td>@product.Category.CategoryName</td>
                        <td>@product.Brand.BrandName</td>
                        <td>@product.Price</td>
                        <td>@product.Stock</td>
                        <td>@product.UserRecord.Username</td>
                        @*<td>
            <a class="fancybox" href="#">
                <i class="icon-eye-open"></i>
            </a>
        </td>*@

                        <td>
                            <a class="edit" href="/Admin/AddProductPicture/@product.id">
                                <i class="icon-paperclip"></i>
                            </a>
                        </td>
                        <td>
                            <a class="edit" href="/Admin/EditProduct/@product.id">
                                <i class="icon-pencil"></i>
                            </a>
                        </td>
                        <td>
                            <a class="delete" href="/Admin/DeleteProduct/@product.id">
                                <i class="icon-trash"></i>
                            </a>
                        </td>


                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>




